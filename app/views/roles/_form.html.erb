<%= form_for @role, html: {class: "form-horizontal"} do |f| %>
    <% if @role.errors.any? %>
        <div class="form-group">
          <div class="col-md-2"></div>
          <div class="col-md-10">
            <div id="error_explanation" class="panel panel-danger">
              <div class="panel-heading">
                <strong><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</strong>
              </div>
              <ul class="list-group">
                <% @role.errors.full_messages.each do |message| %>
                    <li class="list-group-item"><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    <% end %>

    <% if ["new", "create"].include? action_name %>
        <div class="form-group">
          <%= f.label :name, class: "col-md-2 control-label" %>
          <div class="col-md-2">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :description, class: "col-md-2 control-label" %>
      <div class="col-md-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", roles_path, class: "btn btn-danger" %>
      </div>
    </div>
<% end %>

