<div class="row">
  <div class="page-header">
    <h1>Role Details</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-8">
    <ul class="list-group">
      <li class="list-group-item">
        <strong>Name:</strong>
        <%= @role.name %>
      </li>
      <li class="list-group-item">
        <strong>Description:</strong>
        <%= @role.description %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-8">
    <%= link_to "Back", roles_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_role_path, class: "btn btn-warning" %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-8">
    <table class="table table-hover table-condensed">
      <thead>
      <tr>
        <th nowrap>User</th>
        <th>Email</th>
        <th nowrap>Last sign in date</th>
        <th>Last sign in IP</th>
        <th colspan="2"></th>
      </tr>
      </thead>
      <tbody>
      <% @role.users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user %></td>
            <td><%= user.email %></td>
            <td nowrap><%= user.last_sign_in_date %></td>
            <td nowrap><%= user.last_sign_in_ip %></td>
            <td>
              <%= link_to edit_user_path(user) do %>
                  <span class="glyphicon glyphicon-pencil" area-hidden="true" title="Edit"></span>
              <% end %>
            </td>
            <td>
              <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash" area-hidden="true" title="Delete"></span>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
