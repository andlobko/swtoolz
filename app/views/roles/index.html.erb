<div class="row">
  <div class="page-header">
    <h1>Listing Roles</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-8">
    <table class="table table-hover table-condensed">
      <thead>
      <tr>
        <th>Role</th>
        <th>Description</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @roles.each do |role| %>
          <tr>
            <td><%= link_to role.name, role %></td>
            <td><%= role.description %></td>
            <td>
              <%= link_to edit_role_path(role) do %>
                  <span class="glyphicon glyphicon-pencil" area-hidden="true" title="Edit"></span>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3"></div>
</div>
