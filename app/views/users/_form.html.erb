<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
    <% if @user.errors.any? %>
        <div class="form-group">
          <div class="col-md-2"></div>
          <div class="col-md-10">
            <div id="error_explanation" class="panel panel-danger">
              <div class="panel-heading">
                <strong><%= pluralize(@user.errors.count, "error") %> prohibited this subnet from being saved:</strong>
              </div>
              <ul class="list-group">
                <% @user.errors.full_messages.each do |message| %>
                    <li class="list-group-item"><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    <% end %>

    <% if ["new", "create"].include? action_name %>
        <div class="form-group">
          <%= f.label :name, class: "col-md-2 control-label" %>
          <div class="col-md-2">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :email, class: "col-md-2 control-label" %>
      <div class="col-md-2">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :role, class: "col-md-2 control-label" %>
      <div class="col-md-2">
        <%= f.collection_select :role_id, Role.all, :id, :name %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-md-2 control-label" %>
      <div class="col-md-2">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
      <div class="col-md-2">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", users_path, class: "btn btn-danger" %>
      </div>
    </div>
<% end %>

