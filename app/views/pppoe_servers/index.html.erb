<div class="row">
  <div class="page-header">
    <h1>Listing PPPoE Servers</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-8">
    <table class="table table-hover table-condensed">
      <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @pppoe_servers.each do |pppoe_server| %>
          <tr>
            <td><%= link_to pppoe_server.name, pppoe_server %></td>
            <td><%= pppoe_server.address %></td>
            <td><%= pppoe_server.description %></td>
            <% if can? :manage, pppoe_server %>
                <td>
                  <%= link_to edit_pppoe_server_path(pppoe_server) do %>
                      <span class="glyphicon glyphicon-pencil" area-hidden="true" title="Edit"></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to pppoe_server, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <span class="glyphicon glyphicon-trash" area-hidden="true" title="Delete"></span>
                  <% end %>
                </td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3"></div>
</div>

<%= console %>
