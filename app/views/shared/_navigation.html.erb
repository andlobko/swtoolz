    <div class="navbar-header">
        <a class="navbar-brand" href="#"><strong>SwToolz</strong></a>
    </div>
    <div class="navbar-inner">
        <div class="container">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', root_path %></li>
